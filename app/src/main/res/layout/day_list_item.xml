<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/day_txtFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_from"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            style="@style/TextAppearance.AppCompat.Medium"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/day_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/day_txtFrom"
            android:padding="2dp"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginLeft="7dp"
            android:text="00:00"/>

        <TextView
            android:id="@+id/day_txtTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_from"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_centerHorizontal="true"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/day_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/day_txtTo"
            style="@style/TextAppearance.AppCompat.Medium"
            android:padding="2dp"
            android:text="10:00"/>

        <TextView
            android:id="@+id/day_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            style="@style/TextAppearance.AppCompat.Medium"
            android:padding="2dp"
            android:text="Aula"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Matéria: "
            style="@style/TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:id="@+id/day_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginLeft="15dp"
            android:text="Prog I"
            style="@style/TextAppearance.AppCompat.Medium"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Descrição: "
            style="@style/TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:id="@+id/day_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginLeft="15dp"
            android:text="Capítulos 1 ao 2"
            style="@style/TextAppearance.AppCompat.Small"
            />

    </LinearLayout>


</LinearLayout>